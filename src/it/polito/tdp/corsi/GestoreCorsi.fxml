<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polito.tdp.corsi.GestoreCorsiController">
   <top>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox>
               <children>
                  <Label text="Periodo" />
                  <TextField fx:id="txtPeriodo" />
                  <Button fx:id="btnCercaCorsi" mnemonicParsing="false" onAction="#doCercaCorsi" text="Cerca Corsi" />
                  <Button fx:id="btnStatCorsi" mnemonicParsing="false" onAction="#doCalcolaStatCorsi" text="Statistiche Corsi" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="Corso" />
                  <TextField fx:id="txtCorso" />
                  <Button fx:id="btnElenca" mnemonicParsing="false" onAction="#doElenca" text="Elenca Studenti" />
                  <Button fx:id="btnCds" mnemonicParsing="false" onAction="#doStatCds" text="Statistiche CDS" />
               </children></HBox>
         </children>
      </VBox>
   </top>
   <center>
      <TextArea fx:id="txtResult" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
